{
  "manifest_version": 2,
  "name": "Monotone",
  "version": "1.0",
  "description": "Reduce visual clutter with Monotone!",
  "content_scripts": [{ 
    "matches": ["http://*/*", "https://*/*"],
    "js": ["update.js"],
    "css": ["styles.css"]
  }],
  "permissions": [
  	"storage",
  	"active tab"
  ],
  "browser_action": {
  	"default_popup" : "popup.html"
  }
}
